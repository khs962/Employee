<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hybrid.mapper.EmpMapper">
	<sql id="FromEmp">
    	select empno,
    	   ename,
    		   job,
    		   mgr,
    		   hiredate,
    		   sal,
    		   comm,
    		   deptno
    	  from emp
    </sql>
    
    
    <select id="seletAll" resultType="com.hybrid.model.Emp">
    	<include refid="FromEmp"/>
    </select>
    
    <select id="seletByEmpno" 
    	resultType="com.hybrid.model.Emp" 
    	parameterType="int">
    	
    	<include refid="FromEmp"/>
    	 where empno = #{empno}
    	 
    </select>
    
    <insert id="insert" parameterType="com.hybrid.model.Emp">
    	insert into emp
    	(
    		empno,
    		ename,
    		job,
    		mgr,
    		hiredate,
    		sal,
    		comm,
    		deptno
    	)
    	values
    	(
    		#{empno},
    		#{ename},
    		#{job},
    		#{mgr},
    		#{hiredate},
    		#{hiredate},
    		#{sal},
    		#{comm},
    		#{deptno} 
    	)
    </insert>
    
    <update id="updateByEmpno" parameterType="com.hybrid.model.Emp">
    	update emp
    	   set ename  = #{ename},
    	   	   job    = #{job},
    	   	   mrg	  = #{mrg},
    	   	   hiredate = #{hiredate},
    	   	   sal	  = #{sal},
    	   	   comm	  = #{comm},
    	   	   deptno = #{deptno}
    	 where empno = #{empno}
    
    </update>
    
    <delete id="deleteByEmpno" parameterType="int">
    	delete from emp
    	 where empno = #{empno}
    
    </delete>
</mapper>
